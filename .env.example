# Database
# Use Vercel Postgres, Supabase, or any PostgreSQL database
# Get a free database at: https://vercel.com/docs/storage/vercel-postgres
DATABASE_URL="postgresql://user:password@localhost:5432/dsc_database?schema=public"

# Etsy API Credentials
# Get these from: https://www.etsy.com/developers/your-apps
ETSY_API_KEY="your_etsy_api_key_here"
ETSY_API_SECRET="your_etsy_api_secret_here"
ETSY_SHOP_ID="your_shop_id_here"

# OAuth tokens (will be generated after first auth)
ETSY_ACCESS_TOKEN="your_access_token_here"
ETSY_REFRESH_TOKEN="your_refresh_token_here"

# Application
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Vercel Cron (generate a random string)
CRON_SECRET="your_random_secret_here"

# Admin credentials (for inventory management)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change_this_password"
